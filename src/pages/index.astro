---
import Base from '../layouts/Base.astro'
import SocialLinks from '../components/sociallinks.astro'
import SkillBanner from '../components/skillBanner.astro'
---

<Base title="Home">
	<header class="flex flex-col h-dvh">
		<SocialLinks />
		<div
			class="mb-[4rem] flex grow flex-wrap items-center justify-center bg-white text-black shadow-md"
		>
			<div id="heroText" class="mx-3 w-min">
				<h1 class="mb-5 font-sans leading-none text-hero md:text-nowrap">Alex Aspinall.</h1>
				<h2 class="font-bold tracking-wider uppercase text-hero-sm font-eurostile">
					<span class="underline decoration-4 underline-offset-8 decoration-blue-500"
						>Full-stack</span
					>
					<span class="underline decoration-4 underline-offset-8 decoration-amber-600"
						>Web Developer</span
					>
				</h2>
			</div>
			<SkillBanner />
		</div>
	</header>
	<main>
		<section>
			<h2>About Me</h2>
			<p>
				Hi, I'm Alex. I'm a web developer based in London. I have experience with HTML, CSS, and
				JavaScript, and I'm currently learning React.
			</p>
		</section>
		<section>
			<h2>Projects</h2>
			<ul>
				<li>
					<h3>Project 1</h3>
					<p>Project 1 description</p>
				</li>
				<li>
					<h3>Project 2</h3>
					<p>Project 2 description</p>
				</li>
				<li>
					<h3>Project 3</h3>
					<p>Project 3 description</p>
				</li>
			</ul>
		</section>
	</main></Base
>
