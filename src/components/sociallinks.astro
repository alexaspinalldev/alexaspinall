---
import Button from '../components/button.astro'
// Props are href, onClick, variant, label, svg

import Theme from '../components/themeToggle.astro'
---

<div class="flex h-[5.5rem] justify-end items-center gap-3 mr-4">
	<Theme />
	<Button
		id="linkedinLink"
		href="https://www.linkedin.com/in/alexaspinalldev/"
		variant="btnblue"
		label="LinkedIn"
		svg="LinkedIn"
		aria-label="Link to my LinkedIn profile (opens in a new tab)"
	/>
	<Button
		id="githubLink"
		href="https://github.com/alexaspinalldev/"
		variant="btnblack"
		label="Github"
		svg="Github"
		aria-label="Link to my Github account (opens in a new tab)"
	/>
	<Button id="contactMeLink" href="" variant="btnorange" label="Contact me" svg="Mail" />
	<Button
		id="fitnessCoachingLink"
		href="/fitness/"
		variant="btnred"
		label="Fitness coaching"
		svg="Weight"
		aria-label="Link to my online fitness coaching website"
	/>
</div>
