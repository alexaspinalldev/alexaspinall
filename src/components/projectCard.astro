---
import { Image } from 'astro:assets'
import { projectThumbs } from '../assets/images/projectThumbs/projectThumbs.ts'

let { livehref, githubhref, title, blurb, thumb } = Astro.props

thumb = projectThumbs[thumb as keyof typeof projectThumbs]
---

<div
	class="flex flex-col mb-2 overflow-hidden bg-white shadow-lg md:max-w-19/80 md:grow rounded-2xl dark:bg-gray-800"
>
	<div class="p-5 grow rounded-t-2xloverflow-hidden">
		<div>
			{
				thumb ? (
					<Image
						src={thumb}
						alt={`${title} thumbnail`}
						class="object-cover aspect-3/2 rounded-t-2xl"
					/>
				) : (
					<div class="bg-gray-200 aspect-3/2 rounded-t-2xl" />
				)
			}
		</div>
		<div class="pt-4">
			<h4 class="mb-1 font-bold tracking-wider font-eurostile-regular">{title}</h4>
			<p>{blurb}</p>
		</div>
	</div>
	<div class="flex justify-between w-full text-gray-400 bg-gray-100 flex-nowrap">
		{
			livehref ? (
				<a
					class="flex justify-center w-full py-3 hover:text-gray-500 hover:bg-gray-200"
					href={livehref}
					target="_blank"
					rel="noopener"
					aria-label={`${title} live site link`}
				>
					<svg
						fill="currentColor"
						viewBox="0 0 16 16"
						xmlns="http://www.w3.org/2000/svg"
						width="24"
						height="24"
					>
						<>
							<g id="SVGRepo_bgCarrier" stroke-width="0" />
							<g
								id="SVGRepo_tracerCarrier"
								stroke-linecap="round"
								stroke-linejoin="round"
							/>
							<g id="SVGRepo_iconCarrier">
								<path d="M16 7.38A7.82 7.82 0 0 0 8 .5a7.82 7.82 0 0 0-8 6.88v1.24a7.82 7.82 0 0 0 8 6.88 7.82 7.82 0 0 0 8-6.88V7.38zm-1.25 0h-3a11.34 11.34 0 0 0-.43-2.54 7.6 7.6 0 0 0 1.75-1 6 6 0 0 1 1.65 3.54zm-9.18 0a9.69 9.69 0 0 1 .37-2.14A8.43 8.43 0 0 0 8 5.5a8.49 8.49 0 0 0 2.09-.26 10.2 10.2 0 0 1 .37 2.14zm4.92 1.24a9.59 9.59 0 0 1-.37 2.14 8.53 8.53 0 0 0-4.18 0 9.69 9.69 0 0 1-.37-2.14zm.4-5A11.82 11.82 0 0 0 10 2a6.89 6.89 0 0 1 2 1 6.57 6.57 0 0 1-1.14.66zm-2.6-1.86a10 10 0 0 1 1.38 2.3A7.63 7.63 0 0 1 8 4.25a7.56 7.56 0 0 1-1.67-.19 9.82 9.82 0 0 1 1.38-2.3h.58zm-3.15 1.9A6.57 6.57 0 0 1 4 3a6.89 6.89 0 0 1 2-1 10.38 10.38 0 0 0-.86 1.66zM3 3.83a7.6 7.6 0 0 0 1.75 1 11 11 0 0 0-.43 2.54h-3A6 6 0 0 1 3 3.83zM1.28 8.62h3a11 11 0 0 0 .43 2.54 7.6 7.6 0 0 0-1.75 1 6 6 0 0 1-1.68-3.54zm3.86 3.72A10.38 10.38 0 0 0 6 14a6.89 6.89 0 0 1-2-1 6.57 6.57 0 0 1 1.14-.66zm2.57 1.9a9.82 9.82 0 0 1-1.38-2.3 7.43 7.43 0 0 1 3.34 0 9.76 9.76 0 0 1-1.38 2.3h-.58zm3.15-1.9a6.57 6.57 0 0 1 1.19.66 7.24 7.24 0 0 1-2 1 11.48 11.48 0 0 0 .81-1.66zm2.14-.17a7.6 7.6 0 0 0-1.75-1 10.8 10.8 0 0 0 .43-2.54h3A6 6 0 0 1 13 12.17z" />
							</g>
						</>
					</svg>
				</a>
			) : null
		}
		{
			githubhref ? (
				<a
					class="flex justify-center w-full py-3 hover:text-gray-500 hover:bg-gray-200"
					href={githubhref}
					target="_blank"
					rel="noopener noreferrer"
					aria-label={`${title} github repo link`}
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 20 20"
						width="24"
						height="24"
						fill="currentColor"
					>
						<path d="M10,1C4.477,1,0,5.59,0,11.253c0,4.53,2.862,8.372,6.833,9.729c0.507,0.101,0.687-0.219,0.687-0.492 c0-0.338-0.012-1.442-0.012-2.814c-3.227,0.702-3.91-1.294-3.91-1.294c-0.45-1.151-1.1-1.459-1.1-1.459 c-0.9-0.638,0.069-0.625,0.069-0.625c0.993,0.069,1.515,1.037,1.515,1.037c0.884,1.517,2.32,1.08,2.885,0.825 c0.09-0.641,0.345-1.08,0.627-1.33c-2.576-0.292-5.285-1.288-5.285-5.732c0-1.266,0.45-2.298,1.185-3.108 C3.747,5.742,3.3,4.577,3.9,3.21c0,0,0.975-0.312,3.2,1.187c0.925-0.264,1.92-0.396,2.907-0.4c0.987,0.004,1.982,0.136,2.907,0.4 c2.225-1.499,3.2-1.187,3.2-1.187c0.6,1.367,0.153,2.532,0.077,2.732c0.735,0.81,1.185,1.842,1.185,3.108 c0,4.454-2.71,5.44-5.287,5.727c0.354,0.305,0.67,0.908,0.67,1.83c0,1.323-0.012,2.385-0.012,2.712 c0,0.273,0.18,0.593,0.687,0.492C17.138,19.625,20,15.783,20,11.253C20,5.59,15.523,1,10,1z" />
